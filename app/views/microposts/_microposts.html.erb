<ul class="media-list">
  <% microposts.each do |micropost| %>
    <% user = micropost.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
       
        <div>
          <p><%= link_to micropost.content %></p>
          
        </div>
        <div>
          
          <% if current_user == micropost.user %>
            <%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
          
          <%= render 'favorites/favorite_button', micropost: micropost %>
              <%  @micropost = current_user.microposts.build %>
              
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">返信する <span class="caret"></span></a>
              <ul class="dropdown-menu" >
              <div class="col-xs-12">
              <%= form_for(@micropost, url: reply_micropost_path(micropost)) do |f| %>
                <p><%= micropost.user.name %>のポスト「<%= micropost.content %>」に対する返信</p>
                <%= f.text_area :content %>
                <%= f.submit value="返信する" %>
              <% end %>
              </div>
              </ul>
         
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microposts %>
</ul>